package tema5;

public class Persona {
	
	//Atributos (o propiedades)
	String nombre;
	byte edad;
	double altura;
	
	//Constructores
	
	Persona(String nombre, int edad, double altura){
		this.nombre= "Nacho";
		this.edad= 23;
		this.altura= 1.50;
	}
	
	//Metodos
	public void saludar() {
		System.out.println("Hola!! :)");
	}
	public void caminar() {
		System.out.println("Estoy caminando");
	}
	
	public void cumple() {
		edad ++;
	}
	
}
