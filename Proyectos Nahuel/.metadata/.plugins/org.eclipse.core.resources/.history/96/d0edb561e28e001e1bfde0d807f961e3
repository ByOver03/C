package tema5;

public class Persona {
	
	//Atributos (o propiedades)
	String nombre;
	byte edad;
	double altura;
	
	//Constructores
	
	Persona(String nombre, byte edad, double altura){
		nombre= "Nacho";
		edad= 23;
		altura= 1.50;
		saludar();
	}
	
	//Metodos
	public void saludar() {
		System.out.println("Hola!! :)");
	}
	public void caminar() {
		System.out.println("Estoy caminando");
	}
	
	public void cumple() {
		edad ++;
	}
	
}
